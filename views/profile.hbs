{{#with profile}}

<div class="flex justify-center">
    <div class="w-96 shadow-2xl h-screen
        flex flex-col items-center p-5">
        <img src="https://avatars.dicebear.com/api/bottts/:{{name}}.svg" alt="profile pic"
            class="w-1/3 rounded-full border">
        <h1 class="font-bold text-2xl">{{name}}</h1>
        <h5 class="font-thin text-sm text-black/50">{{pronouns}}</h5>
        <p class="font-thin">"{{bio}}"</p>

    </div>
</div>

{{/with}}