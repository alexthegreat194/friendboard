<h1>dashboard</h1>

create group: 
<div class="flex">
    <form action="/group/new" method="post" 
        class="border flex flex-col gap-3 p-3">
        <div class="flex flex-col">
            <label for="name">Name</label>
            <input type="text" name="name" id="name" 
                class="border rounded p-1" />
        </div>
        <div class="flex justify-center">
            <input type="submit" value="Create" 
                class="hover:cursor-pointer rounded-xl p-2 bg-blue-500 text-white shadow"/>
        </div>
    </form>
</div>

Join group: 
<div class="flex">
    <form action="/group/join" method="post" 
        class="border flex flex-col gap-3 p-3">
        <div class="flex flex-col">
            <label for="code">Invite Code</label>
            <input type="text" name="code" id="code" 
                class="border rounded p-1" />
        </div>
        <div class="flex justify-center">
            <input type="submit" value="Join" 
                class="hover:cursor-pointer rounded-xl p-2 bg-blue-500 text-white shadow"/>
        </div>
    </form>
</div>

{{#if inGroup}}

    <div >
        {{#each groups}}
            <div class="border rounded p-3">
                <h1>Name: {{name}}</h1>
                <h3>Code: {{code}}</h3>
                <ul>
                    {{#each this.profiles}}
                        <li>{{name}}</li>
                    {{/each}}
                </ul>
                <div class="flex m-3">
                    <a href="/group/{{id}}" 
                        class="rounded-xl bg-blue-600 text-white p-3">View</a>
    
                    {{#if isOwner}}
                    <a href="/group/{{id}}/delete" 
                        class="rounded-xl bg-red-600 text-white p-3">Delete</a>
                    {{else}}
                    <a href="/group/{{id}}/leave" 
                        class="rounded-xl bg-red-600 text-white p-3">Leave</a>
                    {{/if}}
                </div>
            </div>
        {{/each}}
    </div>

