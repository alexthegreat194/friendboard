<div class="flex justify-center items-center w-full h-[80vh]">
    <div class="w-96 flex flex-col p-4 shadow">
        <h1 class="font-bold text-2xl self-center">Create a New Account!</h1>
        <form action="/login" method="post"
            class="flex flex-col justify-center gap-3 p-3">
            <div class="flex flex-col">
                <label for="email"
                    class="text-md">Email</label>
                <input name="email" type="text"
                    class="border p-2 rounded">
            </div>
            <div class="flex flex-col">
                <label for="password"
                    class="text-md">Password</label>
                <input name="password" type="password"
                    class="border p-2 rounded">
            </div>
            <div class="flex justify-between items-center">
                <button class="shadow border rounded p-2 px-4 bg-blue-600 text-white hover:bg-blue-700" type="submit">Signup</button>
                <div>
                    Have an account? <a class="text-blue-500" href="/login">Login</a>
                </div>
            </div>
        </form>
    </div>
</div>